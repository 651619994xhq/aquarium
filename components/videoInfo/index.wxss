@import '../../app.wxss';
.video-info{
    width: 750rpx;
    overflow: hidden;
}
.header{
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}
.header-img{
    width: 72rpx;
    height: 72rpx;
    margin-left: 30rpx;
}
.header-info{
    margin-left: 20rpx;
    width: 500rpx;
}
.title1{
    width: 100%;
    text-align: left;
    font-size: 28rpx;
    color: #333333;
    font-weight: bold;
}
.title2{
    width: 100%;
    text-align: left;
    font-size: 24rpx;
    color: #B8C2CC;
}
.header-btn{
    width: 106rpx;
    height: 48rpx;
    line-height: 49rpx;
    text-align: center;
    background: #EBEFF4;
    border-radius: 14px;
    font-size: 20px;
}
.play-module{
    width: 100%;
    height: 414rpx;
    position: relative;
}
.play-btn{
    position: absolute;
    top: 163rpx;
    left: 331rpx;
    width: 88rpx;
    height: 88rpx;
    display: block;

}
.play-img{
    display: block;
    width: 100%;
    height: 100%;
}
.text-moudle{
    padding: 0 30rpx;
    margin-top: 20rpx;
    font-size: 32rpx;
    line-height: 40rpx;
}

.bottom-moudle{
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}
.bottom-img{
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}
.message{
    width: 140rpx;
    margin-left: 30rpx;
}
.collect{
    width: 300rpx;
}

