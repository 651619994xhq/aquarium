.header{
    width: 100%;
    height: 216rpx;
    background: -webkit-linear-gradient(left, #6086FF , #67D8F0); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #6086FF , #67D8F0); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #6086FF , #67D8F0); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #6086FF , #67D8F0); /* 标准的语法 */
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
}
.title{
  color: white;
  margin-top: 30px;
}

page{
    width: 100%;
    height: 100%;
    background: #ffffff;
}
.container{
    width: 100%;
    height: 100%;
}
.nav {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    /*overflow: hidden;*/
    line-height: 100rpx;
    font-size: 16px;
    white-space: nowrap;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 99;
}
.nav-item {
    width: 125rpx;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    /*background: #6086FF;*/
    position: relative;

}
.nav-item.active{
    color: white;
    font-weight: bold;
}
.nav-item-bottom{
    position: absolute;
    bottom: 0;
    left: 46.5rpx;
    height: 8rpx;
    width: 32rpx;
    background: #ffffff;
    border-radius: 200rpx 200rpx 0 0;
}
.all-item{
    width: 100%;
    height: 100rpx;
    position: fixed;
    top:216rpx;
    left: 0;
    background: #ffffff;
}
