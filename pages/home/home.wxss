.container{
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
}
.header-moudle{
    width: 100%;
    height: 316rpx;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    /*background: red;*/
}
.header{
    width: 100%;
    height: 216rpx;
    background: -webkit-linear-gradient(left, #6086FF , #67D8F0); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, #6086FF , #67D8F0); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, #6086FF , #67D8F0); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, #6086FF , #67D8F0); /* 标准的语法 */
    overflow: hidden;
    position: relative;
}
.title{
  color: white;
  margin-top: 30px;
}
.nav {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 100rpx;
    font-size: 16px;
    white-space: nowrap;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 1;
}
.nav-item {
    width: 125rpx;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    color: #fff;
    /*background: #6086FF;*/
    position: relative;

}
.nav-item.active{
    color: white;
    font-weight: bold;
}
.nav-item-bottom{
    position: absolute;
    bottom: 0;
    left: 46.5rpx;
    height: 8rpx;
    width: 32rpx;
    background: #ffffff;
    border-radius: 200rpx 200rpx 0 0;
}
.all-item{
    width: 100%;
    height: 100rpx;
    background: #ffffff;
}

.hbo{
    position: absolute;
    bottom: 24rpx;
    right: 20rpx;
    width: 32rpx;
    height: 50rpx;
    background: #67D8F0;
    z-index: 2;
}
.hbo image{
    margin-top: 9rpx;
    display: block;
    width: 32rpx;
    height: 32rpx;
}
.search-title{
    height:48rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 32rpx;
    margin-left: 30rpx;
    color: #B8C2CC;

}
.search-title.active{
    background: #EBEFF4;
}

.detail-list{
    margin-top: 316rpx;
    width: 100%;
    height: calc(100% - 436rpx);
    padding-bottom: 200rpx;
    overflow: hidden;
}
.noData{
    display: block;
    width: 100%;
    text-align: center;
    margin-top: 300rpx;
}

.backTop {
    width: 85rpx;
    height: 85rpx;
    line-height: 120rpx;
    position: fixed;
    right: 50rpx;
    bottom: 160rpx;
    z-index: 100;
    background: #fff;
    text-align: center;
    border-radius: 50%;
    box-shadow: 0rpx 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.backTop image {
    width: 65rpx;
    height: 65rpx;
}

