<!--logs.wxml-->
<view class="container">
<wxs src="../../filter/filter.wxs" module="filter"></wxs>
<view class="header">
    <view class="title center-text">水族达人</view>
    <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
            <view class="nav-item {{currentTab == idx ?'active':''}}"  data-current="{{idx}}" bindtap="switchNav">
                <view>{{navItem.name}}</view>
                 <view class="nav-item-bottom" wx-if="{{currentTab == idx}}"></view>
            </view>
        </block>
    </scroll-view>
    <navigator class="hbo" url="/pages/label/index"><image src="/image/hbo.png"></image></navigator>
<!--    <view class="hbo"></view>-->
    </view>
    <view class="all-item row flex-item flex-justify-start">
<!--        <view class="select-all {{selectAll?'active':''}}" bindtap="handleSelectAll" >全部</view>-->
        <view wx:for="{{selectList}}" wx:for-index="idx" wx:for-item="selectItem" wx:key="idx" class="search-title {{selectItem.select?'active':''}}" data-current="{{idx}}" bindtap="handleSelect" >{{selectItem.text}}</view>
    </view>
    <view class="fill-bank"></view>
    <scroll-view scroll-y="true" style="height:{{scrollHeight}}px" bindscrolltolower="loadMore" bindscrolltoupper="refesh" upper-threshold="-50" class="main-view">
<!--    <scroll-view scroll-y="true" style="height:{{scrollHeight}}px" bindscrolltolower="loadMore" class="main-view">-->
        <view wx:if="{{hasRefesh}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
        <icon type="waiting" size="20"/><text>刷新中...</text></view>
<!--        <view wx:else style="display:none" ><text></text></view>-->
        <i-video itemInfo="{{item}}" bind:myevent="changeFn" wx:for="{{list}}" wx:for-item="item" wx:for-index="idx" wx:key="idx"></i-video>
        <view class="tips1">
            <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
                <icon type="waiting" size="20"/><text>玩命的加载中...</text></view>
            <view wx:else class="center-text"><text>没有更多内容了</text></view>
        </view>
    </scroll-view>

</view>
